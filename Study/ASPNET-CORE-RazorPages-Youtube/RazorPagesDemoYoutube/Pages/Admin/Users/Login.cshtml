@page
@model Admin.Users.LoginModel
@{
}
<div class="card w-50" style="margin:auto">
    <div class="card-header bg-info text-white" style="font-weight:bold;">
        <i class="bi bi-person-circle"></i> Login
    </div>
    <form method="post">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label"> Email </label>
                <input asp-for="InputLogin.Email" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label"> Password </label>
                <input asp-for="InputLogin.Password" type="password" class="form-control" />
            </div>
            <div class="mb-3">
                <div class="checkbox ml-3">
                    <label asp-for="InputLogin.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="InputLogin.RememberMe" />
                        @Html.DisplayNameFor(m => m.InputLogin.RememberMe)
                    </label>
                </div>
            </div>
           
        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle" style="color:white;"></i> Login  </button>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}